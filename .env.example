# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://postgres:password@localhost:5432/mydb?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/thecareranchintake?schema=public"

# Non-pooling connection for Prisma migrations (optional, Vercel Postgres)
# Only needed when using connection poolers like PgBouncer
# POSTGRES_URL_NON_POOLING="postgresql://postgres:password@localhost:5432/thecareranchintake"


# =============================================================================
# NEXTAUTH.JS v5 (BETA)
# =============================================================================

# Secret used to encrypt JWT tokens and session data
# REQUIRED in production, optional in development
# Generate with: npx auth secret
# Or: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here-generate-with-npx-auth-secret"

# Canonical URL of your site (optional, auto-detected in Vercel)
# Only needed if auto-detection fails or for local development
# AUTH_URL="http://localhost:3000"


# =============================================================================
# RESEND EMAIL (REQUIRED FOR MAGIC LINK AUTH)
# =============================================================================

# Resend API Key for sending magic link emails
# Sign up at: https://resend.com
# Free tier: 3,000 emails/month
RESEND_API_KEY="re_your_api_key_here"

# Email address to send magic links from
# Must be verified in Resend dashboard
# Default: noreply@thecareranch.com
RESEND_FROM_EMAIL="noreply@thecareranch.com"


# =============================================================================
# OAUTH PROVIDERS (OPTIONAL - NOT CURRENTLY USED)
# =============================================================================

# GitHub OAuth
# Create app at: https://github.com/settings/developers
# AUTH_GITHUB_ID="your-github-client-id"
# AUTH_GITHUB_SECRET="your-github-client-secret"

# Google OAuth
# Create app at: https://console.cloud.google.com/apis/credentials
# AUTH_GOOGLE_ID="your-google-client-id"
# AUTH_GOOGLE_SECRET="your-google-client-secret"

# Discord OAuth
# Create app at: https://discord.com/developers/applications
# AUTH_DISCORD_ID="your-discord-client-id"
# AUTH_DISCORD_SECRET="your-discord-client-secret"


# =============================================================================
# NODE ENVIRONMENT
# =============================================================================

# Application environment
# Options: development | test | production
NODE_ENV="development"


# =============================================================================
# BUILD & DEPLOYMENT (OPTIONAL)
# =============================================================================

# Skip environment variable validation during build
# Useful for Docker builds or CI/CD pipelines
# SKIP_ENV_VALIDATION="true"


# =============================================================================
# VERCEL DEPLOYMENT NOTES
# =============================================================================

# When deploying to Vercel:
# 1. DATABASE_URL - Set in Vercel dashboard or use Vercel Postgres
# 2. AUTH_SECRET - MUST be set (generate with: npx auth secret)
# 3. AUTH_URL - Auto-detected, no need to set
# 4. OAuth credentials - Add via Vercel dashboard environment variables
# 5. NODE_ENV - Automatically set by Vercel (production/preview/development)
